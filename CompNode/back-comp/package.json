{
	"name": "back-comp",
	"version": "0.0.1",
	"description": "",
	"author": "",
	"private": true,
	"license": "UNLICENSED",
	"scripts": {
		"prebuild": "rm -rf dist",
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "ts-node src/index.ts",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "NODE_ENV=production node dist/back-comp/src/main",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json",
		"migration:generate": "ts-node node_modules/.bin/typeorm migration:generate --config ./orm.config.json --name",
		"migration:run": "ts-node node_modules/.bin/typeorm migration:run --config ./orm.config.json",
		"migration:revert": "ts-node node_modules/.bin/typeorm migration:revert --config ./orm.config.json",
		"nest": "nest"
	},
	"dependencies": {
		"@aml360/nestjs-compression": "^6.0.103",
		"@mapbox/node-pre-gyp": "^1.0.5",
		"@nestjs-modules/mailer": "^1.6.0",
		"@nestjs/common": "^7.6.17",
		"@nestjs/core": "^7.6.17",
		"@nestjs/jwt": "^7.2.0",
		"@nestjs/passport": "^7.1.5",
		"@nestjs/platform-express": "^7.6.17",
		"@nestjs/platform-fastify": "^7.6.17",
		"@nestjs/serve-static": "^2.1.4",
		"@nestjs/swagger": "^4.8.0",
		"@nestjs/typeorm": "^7.1.5",
		"bcrypt": "^5.0.1",
		"benchmark": "^2.1.4",
		"bluebird": "^3.7.2",
		"class-transformer": "^0.4.0",
		"class-validator": "^0.13.1",
		"cookie": "^0.4.1",
		"dotenv": "^10.0.0",
		"passport": "^0.4.1",
		"passport-jwt": "^4.0.0",
		"pg": "^8.6.0",
		"reflect-metadata": "^0.1.13",
		"rxjs": "^6.6.7",
		"source-map-support": "^0.5.19",
		"swagger-ui-express": "^4.1.6",
		"typeorm": "^0.2.32"
	},
	"devDependencies": {
		"@compodoc/compodoc": "^1.1.11",
		"@nestjs/cli": "^7.6.0",
		"@nestjs/schematics": "^7.3.1",
		"@nestjs/testing": "^7.6.17",
		"@types/bcrypt": "^5.0.0",
		"@types/benchmark": "^2.1.0",
		"@types/bluebird": "^3.5.35",
		"@types/cookie": "^0.4.0",
		"@types/express": "^4.17.12",
		"@types/jest": "^26.0.23",
		"@types/node": "^15.6.1",
		"@types/nodemailer": "^6.4.2",
		"@types/orientjs": "^3.0.11",
		"@types/passport-jwt": "^3.0.5",
		"@types/source-map-support": "^0.5.3",
		"@types/supertest": "^2.0.11",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^7.27.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^3.4.0",
		"jest": "^26.6.3",
		"prettier": "^2.3.0",
		"supertest": "^6.1.3",
		"ts-jest": "^26.5.6",
		"ts-loader": "^9.2.2",
		"ts-node": "^10.0.0",
		"tsconfig-paths": "^3.9.0",
		"typescript": "^4.3.2"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	},
	"config": {
		"commitizen": {
			"path": "./CompNode/back-comp/node_modules/cz-conventional-changelog"
		}
	}
}
