{
	"compilerOptions": {
		"lib": ["es5", "es6", "ES2017"],
		"target": "es2017",
		"module": "commonjs",
		"moduleResolution": "node",
		"declaration": true,
		"outDir": "./dist",
		"allowSyntheticDefaultImports": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"baseUrl": "./",
		"sourceMap": true,
		"incremental": true,
		"paths": {
			"sharedInterfaces/*": ["../sharedCode/interfaces/*"],
			"sharedCode/*": ["../sharedCode/*"]
		}
	}
}
