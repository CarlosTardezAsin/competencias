{
	"name": "back-comp",
	"version": "0.0.1",
	"description": "",
	"author": "",
	"private": true,
	"license": "UNLICENSED",
	"scripts": {
		"prebuild": "rm -rf dist",
		"build": "nest build",
		"build:compiled": "nest build && ncc build -m dist/back-comp/src/main.js && rm -rf dist/back-comp dist/sharedCode ",
		"build-webpack": "webpack",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "ts-node src/index.ts",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "NODE_ENV=production node dist/back-comp/src/main",
		"start:prod_compiled": "NODE_ENV=production node dist/index",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json",
		"migration:generate": "ts-node node_modules/.bin/typeorm migration:generate --config ./orm.config.json --name",
		"migration:run": "ts-node node_modules/.bin/typeorm migration:run --config ./orm.config.json",
		"migration:revert": "ts-node node_modules/.bin/typeorm migration:revert --config ./orm.config.json",
		"nest": "nest"
	},
	"dependencies": {
		"@aml360/nestjs-compression": "^6.0.103",
		"@mapbox/node-pre-gyp": "^1.0.5",
		"@nestjs-modules/mailer": "^1.6.0",
		"@nestjs/common": "^8.0.1",
		"@nestjs/core": "^8.0.1",
		"@nestjs/jwt": "^8.0.0",
		"@nestjs/passport": "^8.0.0",
		"@nestjs/platform-express": "^8.0.1",
		"@nestjs/platform-fastify": "^8.0.1",
		"@nestjs/serve-static": "^2.2.2",
		"@nestjs/swagger": "^5.0.0",
		"@nestjs/typeorm": "^8.0.1",
		"bcrypt": "^5.0.1",
		"benchmark": "^2.1.4",
		"bluebird": "^3.7.2",
		"class-transformer": "^0.4.0",
		"class-validator": "^0.13.1",
		"cookie": "^0.4.1",
		"date-fns": "^2.22.1",
		"dotenv": "^10.0.0",
		"passport": "^0.4.1",
		"passport-jwt": "^4.0.0",
		"pg": "^8.6.0",
		"reflect-metadata": "^0.1.13",
		"rxjs": "^7.2.0",
		"source-map-support": "^0.5.19",
		"swagger-ui-express": "^4.1.6",
		"ts-toolbelt": "^9.6.0",
		"typeorm": "^0.2.34",
		"winston": "^3.3.3"
	},
	"devDependencies": {
		"@compodoc/compodoc": "^1.1.13",
		"@nestjs/cli": "^8.0.2",
		"@nestjs/schematics": "^8.0.0",
		"@nestjs/testing": "^8.0.1",
		"@types/bcrypt": "^5.0.0",
		"@types/benchmark": "^2.1.1",
		"@types/bluebird": "^3.5.36",
		"@types/cookie": "^0.4.1",
		"@types/express": "^4.17.13",
		"@types/jest": "^26.0.24",
		"@types/node": "^16.3.1",
		"@types/nodemailer": "^6.4.4",
		"@types/orientjs": "^3.0.12",
		"@types/passport-jwt": "^3.0.6",
		"@types/source-map-support": "^0.5.4",
		"@types/supertest": "^2.0.11",
		"@typescript-eslint/eslint-plugin": "^4.28.2",
		"@typescript-eslint/parser": "^4.28.2",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^7.30.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^3.4.0",
		"jest": "^27.0.6",
		"prettier": "^2.3.2",
		"supertest": "^6.1.3",
		"ts-jest": "^27.0.3",
		"ts-loader": "^9.2.3",
		"ts-node": "^10.1.0",
		"tsconfig-paths": "^3.10.1",
		"typescript": "^4.3.5"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	},
	"config": {
		"commitizen": {
			"path": "./back-comp/node_modules/cz-conventional-changelog"
		}
	}
}
